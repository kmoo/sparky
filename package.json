{
  "name": "sparky",
  "version": "0.0.1",
  "description": "Simple, responsive sparklines with only Vanilla JavaScript.",
  "main": "index.js",
  "repository": "git@github.com:kmoo/sparky.git",
  "author": "Luke Moorman",
  "license": "Unlicensed",
  "private": true,
  "scripts": {
    "build:css": "node-sass src/main.scss -o lib",
    "build:js": "babel src -d lib --ignore '**/*.test.js'",
    "build": "yarn build:js && yarn build:css",
    "test": "jest --coverage",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,jsx}\" --write",
    "lint": "eslint --ignore-path .gitignore \"**/*.{js,jsx}\""
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.jsx$": "babel-jest",
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "modulePathIgnorePatterns": [
      "__tests__/fixtures.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "eslint": "6.4.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.3.0",
    "node-sass": "^4.11.0",
    "prettier": "1.18.2",
    "serve": "^11.1.0"
  }
}
