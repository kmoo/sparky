{
  "name": "sparky",
  "version": "0.0.1",
  "description": "Simple, responsive sparklines with only Vanilla JavaScript.",
  "main": "index.js",
  "repository": "git@github.com:kmoo/sparky.git",
  "author": "Luke Moorman",
  "license": "Unlicensed",
  "private": true,
  "scripts": {
    "build": "babel src -d lib --ignore '**/*.test.js'",
    "test": "jest --coverage",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,jsx}\" --write",
    "lint": "eslint --ignore-path .gitignore \"**/*.{js,jsx}\""
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.jsx$": "babel-jest",
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "modulePathIgnorePatterns": [
      "__tests__/fixtures.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "eslint": "5.14.1",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "1.16.4"
  }
}
